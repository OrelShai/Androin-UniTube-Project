<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="headline">
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">34sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="textBoxLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:ems">12</item>
    </style>

    <style name="my_Btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="textViewLinks">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:autoLink">web</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:linksClickable">true</item>
        <item name="android:textColor">#007BFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="logoImage">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:src">@drawable/unitube_logo</item>
    </style>

    <style name="textBoxInstructions">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
</resources>